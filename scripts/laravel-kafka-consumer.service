[Unit]
Description=Laravel Queue Worker and Kafka Consumer
After=network.target

[Service]
Type=simple
User=www-data
Group=www-data
WorkingDirectory=/var/www/dev.379tm.ru
ExecStart=/bin/bash -c 'php artisan kafka:tracking-consumer & wait'
Restart=always
RestartSec=5
StandardOutput=journal
StandardError=journal
SyslogIdentifier=laravel-services

# Ограничения ресурсов
MemoryLimit=1G
CPUQuota=75%

[Install]
WantedBy=multi-user.target
